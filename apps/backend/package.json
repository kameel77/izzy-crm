{
  "name": "@izzy-crm/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prebuild": "npm run prisma:generate",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest",
    "prisma:migrate": "prisma migrate deploy --schema ../../prisma/schema.prisma",
    "prisma:generate": "cross-env DATABASE_URL=postgresql://placeholder:placeholder@localhost:5432/placeholder prisma generate --schema ../../prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema ../../prisma/schema.prisma",
    "prisma:seed": "tsx ../../prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@aws-sdk/client-s3": "^3.670.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.15",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "prisma": "^6.18.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "5.5.4",
    "vitest": "^1.5.0",
    "@types/multer": "^1.4.11"
  }
}
